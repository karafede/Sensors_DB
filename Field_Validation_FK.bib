	journal = {Atmospheric Environment},
	author = {Riley, Erin A. and Banks, Lyndsey and Fintzi, Jonathan and Gould, Timothy R. and Hartin, Kris and Schaal, LaNae and Davey, Mark and Sheppard, Lianne and Larson, Timothy and Yost, Michael sonomaG. and Simpson, Christopher D.},
