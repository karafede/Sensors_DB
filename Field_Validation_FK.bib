	urldate = {2018-10-16},
	journal = {Aerosol Science and Technology},
	author = {Sousan, Sinan and Koehler, Kirsten and Thomas, Geb and Park, Jae Hong and Hillman, Michael and Halterman, Andrew and Peters, Thomas M.},
