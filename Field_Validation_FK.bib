	number = {8},
	urldate = {2018-10-16},
	journal = {Sensors},
	author = {Alvarado, Miguel and Gonzalez, Felipe and Fletcher, Andrew and Doshi, Ashray and Alvarado, Miguel and Gonzalez, Felipe and Fletcher, Andrew and Doshi, Ashray},
	month = aug,
	year = {2015},
	keywords = {PM10, monitoring, blasting, fixed-wing UAV, optical sensor, quadcopter},
