	urldate = {2015-01-08},
	journal = {Atmospheric Environment},
	author = {Lin, C. and Gillespie, J. and Schuder, M. D. and Duberstein, W. and Beverland, I. J. and Heal, M. R.},
	month = jan,
	year = {2015},
	keywords = {Air pollution exposure, Electrochemical gas sensor, NO2, O3, Semiconductor gas sensor},
